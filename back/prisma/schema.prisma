generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum TaskStatus {
    TODO
    IN_PROGRESS
    DONE
}

model Tasks {
    id          String     @id @default(uuid())
    title       String
    description String?
    status      TaskStatus @default(TODO)
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
}
